<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Triathlonvereniging Dordrecht</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TvDordrecht.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3" style="border-bottom: 6px solid #ec0022 !important">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Triathlonvereniging Dordrecht</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Nieuws</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Training</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                Zwemtest
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" asp-controller="SwimTests" asp-action="Index">Besttijden</a></li>
                                <li><a class="dropdown-item" asp-controller="SwimTests" asp-action="Index">Deelnemers</a></li>
                                <li><a class="dropdown-item" asp-controller="SwimTests" asp-action="Index">Zwemtesten</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                Wedstrijd
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" asp-controller="Competitions" asp-action="Index">Wie wat waar</a></li>
                                <li><a class="dropdown-item" asp-controller="Competitions" asp-action="Index">Uitslagen</a></li>
                                <li><a class="dropdown-item" asp-controller="Competitions" asp-action="Index">Evenementen</a></li>
                                <li><a class="dropdown-item" asp-controller="Competitions" asp-action="Index">Tips&Tricks</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">Over ons</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://dordtsebiesboschtriathlon.nl/Home/" target="_blank">Dordtse Biesbosch Triathlon</a>
                        </li>
                    </ul>
                    <button class="btn btn-outline-light" type="submit"><i class="bi bi-person"></i> Aanmelden</button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <h2>@ViewBag.Title</h2>
            <h5>@ViewBag.Subtitle</h5>
            <hr />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-between">
            &copy; @DateTime.Now.Year - Triathlonvereniging Dordrecht
            <div>
                <a class="link-danger" href="https://www.facebook.com/groups/triathlonverenigingdordrecht/about" target="_blank"><i class="bi bi-facebook" style="color: #dc3545"></i></a>
                <a class="link-danger" href="https://www.instagram.com/tvdordrecht/" target="_blank"><i class="bi bi-instagram" style="color: #dc3545"></i></a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
